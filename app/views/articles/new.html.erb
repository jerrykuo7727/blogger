<h1>建立新文章</h1>
<%= form_for(@article) do |f| %>
  <ul>
  <% @article.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
  </ul>
  <p>
    <%= f.label "標題" %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label "內文" %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit "送出" %>
  </p>
<% end %>