<%= form_for(@article, html: {multipart: true}) do |f| %>
  <ul>
  <% @article.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
  </ul>
  <p>
    <%= f.label "標題" %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label "內文" %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.label "標籤" %><br />
    <%= f.text_field :tag_list %>
  </p>
  <p>
    <%= f.label "附圖" %><br />
    <%= f.file_field :image %>
  </p>
  <p>
    <%= f.submit "送出" %>
  </p>
<% end %>